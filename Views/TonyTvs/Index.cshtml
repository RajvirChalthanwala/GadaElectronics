@model GadaElectronics.Models.TonyTvCountryViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="TonyTvs" asp-action="Index" method="get">
    <p>
        <select asp-for="TonyTvCountry" asp-items="Model.OriginCountry">
            <option value="">All</option>
        </select>
        Brand Name: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TonyTvs[0].Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TonyTvs[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TonyTvs[0].OriginCountry)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TonyTvs[0].SerialNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TonyTvs[0].DisplayClearity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TonyTvs[0].Size)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.TonyTvs)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Brand)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OriginCountry)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SerialNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DisplayClearity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Size)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
